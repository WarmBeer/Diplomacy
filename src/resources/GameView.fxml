<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<Group fx:id="area" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="application.Main">
    <Circle fx:id="ball" fill="BLACK" radius="10.0" />
    <Rectangle fx:id="borderTop" height="2" width="500" x="0" y="30" />
    <Rectangle fx:id="borderBottom" height="2" width="500" x="0" y="500" />
    <Rectangle fx:id="borderLeft" height="500" width="2" x="0" y="0" />
    <Rectangle fx:id="borderRight" height="500" width="2" x="498" y="0" />
    <Rectangle fx:id="paddle" fill="BLACK" height="15" layoutX="20" width="100" x="200" y="460" />
    <Text fx:id="gameOverText" fill="RED" layoutX="150" layoutY="330" text="Game Over" />
    <Text fx:id="winnerText" fill="GREEN" layoutX="147.0" layoutY="356.0" text="You've won!" />
    <ToolBar minWidth="500">
        <Button fx:id="startButton" text="Start" />
        <Button fx:id="quitButton" text="Quit" />
        <ProgressBar fx:id="progressBar" progress="100" />
        <Label fx:id="remainingBlocksLabel" />
    </ToolBar>
    <ToolBar layoutY="500" minWidth="500">
        <Hyperlink layoutX="360" layoutY="505" text="www.hascode.com" />
    </ToolBar>
</Group>
